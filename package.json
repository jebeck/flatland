{
  "name": "flatland",
  "version": "1.0.0",
  "description": "Flatland: a romance of data science in the browser",
  "private": true,
  "main": "deck.mdx",
  "scripts": {
    "copy": "cp -r images/ dist/images/",
    "build": "rimraf dist/ && mdx-deck build --basepath='/flatland' deck.mdx && npm run copy",
    "build-local": "rimraf dist/ && mdx-deck build deck.mdx && npm run copy",
    "start": "mdx-deck deck.mdx"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jebeck/flatland.git"
  },
  "author": "Jana E. Beck",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jebeck/flatland/issues"
  },
  "homepage": "https://github.com/jebeck/flatland#readme",
  "devDependencies": {
    "eslint": "^6.7.2",
    "rimraf": "^3.0.0",
    "yalc": "^1.0.0-pre.34"
  },
  "dependencies": {
    "@tweenjs/tween.js": "^18.4.2",
    "code-surfer": "^0.5.5",
    "d3-array": "^2.4.0",
    "d3-color": "^1.4.0",
    "d3-scale": "^3.2.0",
    "d3-scale-chromatic": "^1.5.0",
    "gsap": "^3.0.1",
    "lodash": "^4.17.15",
    "mdx-deck": "^2.5.1",
    "pixi.js": "^5.2.0",
    "raw-loader": "^3.1.0",
    "react-flatland": "file:.yalc/react-flatland",
    "react-loadable": "^5.5.0",
    "react-spring": "^8.0.27",
    "react-three-fiber": "^3.0.14",
    "stats.js": "^0.17.0",
    "styled-components": "^4.4.1",
    "theme-ui": "^0.2.49",
    "three": "^0.110.0",
    "umap-js": "^1.3.1"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2019,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
